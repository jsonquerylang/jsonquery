{
  "type": "object",
  "properties": {
    "source": { "type": "string", "pattern": "^https://" },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "tests": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "object",
            "properties": {
              "category": { "type": "string" },
              "description": { "type": "string" },
              "input": {},
              "query": {},
              "output": {}
            },
            "required": ["category", "description", "input", "query", "output"],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "category": { "type": "string" },
              "description": { "type": "string" },
              "input": {},
              "query": {},
              "throws": { "type": "string" }
            },
            "required": ["category", "description", "input", "query", "throws"],
            "additionalProperties": false
          }
        ]
      }
    }
  },
  "required": ["source", "version", "tests"],
  "additionalProperties": false
}
