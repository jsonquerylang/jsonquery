{
  "type": "object",
  "properties": {
    "source": { "type": "string", "pattern": "^https://" },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "tests": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "category": { "type": "string" },
          "description": { "type": "string" },
          "input": {},
          "query": {},
          "output": {}
        },
        "required": ["category", "description", "input", "query", "output"],
        "additionalProperties": false
      }
    }
  },
  "required": ["source", "version", "tests"],
  "additionalProperties": false
}
