{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://github.com/jsonquerylang/jsonquery/blob/v5.0.0/test-suite/compile.test.schema.json",
  "type": "object",
  "properties": {
    "source": {
      "const": "https://github.com/jsonquerylang/jsonquery/blob/v5.0.0/test-suite/compile.test.json"
    },
    "version": {
      "const": "5.0.0"
    },
    "tests": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "object",
            "properties": {
              "category": { "type": "string" },
              "description": { "type": "string" },
              "input": {},
              "query": {},
              "output": {}
            },
            "required": ["category", "description", "input", "query", "output"],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "category": { "type": "string" },
              "description": { "type": "string" },
              "input": {},
              "query": {},
              "throws": { "type": "string" }
            },
            "required": ["category", "description", "input", "query", "throws"],
            "additionalProperties": false
          }
        ]
      }
    }
  },
  "required": ["source", "version", "tests"],
  "additionalProperties": false
}
