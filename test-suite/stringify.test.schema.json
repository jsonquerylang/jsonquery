{
  "type": "object",
  "properties": {
    "source": { "type": "string", "pattern": "^https://" },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "groups": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "category": { "type": "string" },
          "description": { "type": "string" },
          "options": {
            "type": "object",
            "properties": {
              "indentation": { "type": "string" },
              "maxLineLength": { "type": "number" },
              "operators": {
                "type": "array",
                "items": { "type": "object" }
              }
            }
          },
          "tests": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "input": {},
                "output": { "type": "string" }
              },
              "required": ["input", "output"],
              "additionalProperties": false
            }
          }
        },
        "required": ["category", "description", "tests"],
        "additionalProperties": false
      }
    }
  },
  "required": ["source", "version", "groups"],
  "additionalProperties": false
}
